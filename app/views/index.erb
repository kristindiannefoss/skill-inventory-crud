<div class="container">

<div class="well">
<div class='col-md-12 navbar navbar-default'>
  <a href='/skills' class='navbar-brand'>My Skills</a>
  <ul class='nav navbar-nav navbar-right'>
    <li><a href="/skills/new">New Skill</a></li>
    <li><a href = "/">Home</a></li>
  </ul>
</div>

<% @skills.each do |skill| %>
  <div class="row">
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <img src="https://github.com/kristindiannefoss/skill-inventory-crud/blob/master/img/breaking-bad-jessie-i-got-mad-skills-yo-t-shirt-2503-p.jpg?raw=true" alt="madskillsyo">

        <div class="caption">
        <h3>(<%= skill[:id] %>) <a href="/skills/<%= skill[:id] %>"><%= skill[:title] %></a></h3>

          <p><a class="btn btn-primary" href="/skills/<%= skill[:id] %>/edit">Edit</a>
            <form action="/skills/<%= skill[:id] %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <input class="btn btn-danger" type="submit" value="Delete"></p></form>
        </div>
      </div>
    </div>
  </div>

<% end %>
</div>
